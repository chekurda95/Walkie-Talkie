<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chekurda.walkie_talkie">

    <application
        android:name=".app.WalkieTalkieApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_walkie_talkie"
        android:roundIcon="@mipmap/ic_walkie_talkie_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="true">

        <activity
            android:name="com.chekurda.walkie_talkie.presentation.MainActivity"
            android:screenOrientation="locked"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

    </application>

</manifest>